MODULE main
VAR
    sender_balance : 0..1000;
    receiver_balance : 0..1000;
    amount : 0..1000;

INIT
    sender_balance = 500 & receiver_balance = 500 & amount = 0;

TRANS
    (sender_balance >= amount) ->
    (next(sender_balance) = sender_balance - amount &
    next(receiver_balance) = receiver_balance + amount);
